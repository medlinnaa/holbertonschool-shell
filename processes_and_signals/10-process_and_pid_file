#!/usr/bin/env bash
#creates a PID file, prints forever, and reacts to signals

PIDFILE="/var/run/myscript.pid"

#1) create the pid file with our PID
echo "$$" > "$PIDFILE"

#2) signal handlers

#SIGTERM: print message, delete pid file, terminate
handle_term() {
    echo "I hate the kill command"
    rm -f "$PIDFILE"
    exit 0
}

#SIGINT (Ctrl+C): print message, do NOT exit
handle_int() {
    echo "Y U no love me?!"
}

#SIGQUIT: delete pid file, terminate (no extra message required)
handle_quit() {
    rm -f "$PIDFILE"
    exit 0
}

trap handle_term SIGTERM
trap handle_int SIGINT
trap handle_quit SIGQUIT

#3) main loop
while true
do
    echo "To infinity and beyond"
    sleep 2
done
