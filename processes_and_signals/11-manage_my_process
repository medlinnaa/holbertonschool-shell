#!/usr/bin/env bash
# init-style script to manage manage_my_process

PIDFILE="/var/run/my_process.pid"
DAEMON="./manage_my_process"

start_service() {
    # start the daemon in background
    "$DAEMON" &
    echo $! > "$PIDFILE"
    echo "manage_my_process started"
}

stop_service() {
    if [ -f "$PIDFILE" ]; then
        pid=$(cat "$PIDFILE")
        if [ -n "$pid" ]; then
            kill "$pid" 2>/dev/null
        fi
        rm -f "$PIDFILE"
    fi
    echo "manage_my_process stopped"
}

restart_service() {
    # stop
    if [ -f "$PIDFILE" ]; then
        pid=$(cat "$PIDFILE")
        if [ -n "$pid" ]; then
            kill "$pid" 2>/dev/null
        fi
        rm -f "$PIDFILE"
    fi
    # start
    "$DAEMON" &
    echo $! > "$PIDFILE"
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start_service
        ;;
    stop)
        stop_service
        ;;
    restart)
        restart_service
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac

